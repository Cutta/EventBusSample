<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_light"
    android:padding="5dp">


    <TextView
        android:id="@+id/tv_fragment_mouse_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="I'm Second Fragment"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn_fragment_mouse_send_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Send everywhere"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/tv_fragment_mouse"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_fragment_mouse_send_to_fragments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_fragment_mouse_send_all"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/btn_fragment_mouse_send_all"
        android:layout_toRightOf="@+id/btn_fragment_mouse_send_all"
        android:text="Just Fragments" />

    <TextView
        android:id="@+id/tv_fragment_mouse"
        android:layout_width="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_fragment_mouse_title"
        android:textSize="15sp" />
</RelativeLayout>