<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light"
    android:padding="5dp">


    <TextView
        android:id="@+id/tv_fragment_keyboard_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I'm First Fragment"
        android:textStyle="bold"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn_fragment_keyboard_send_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Send everywhere"
        android:layout_below="@+id/tv_fragment_keyboard"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_fragment_keyboard_send_to_fragments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Just Fragments"
        android:layout_alignTop="@+id/btn_fragment_keyboard_send_all"
        android:layout_toRightOf="@+id/btn_fragment_keyboard_send_all"
        android:layout_toEndOf="@+id/btn_fragment_keyboard_send_all" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginTop="8dp"
        android:id="@+id/tv_fragment_keyboard"
        android:layout_below="@+id/tv_fragment_keyboard_title"
        android:layout_alignLeft="@+id/btn_fragment_keyboard_send_all"
        android:layout_alignStart="@+id/btn_fragment_keyboard_send_all"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>